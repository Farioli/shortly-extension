{
    "manifest_version": 3,
    "name": "Shortly",
    "version": "0.0.0",
    "description": "A web extension to generate summaries of youtube videos",
    "permissions": [
        "storage",
        "tabs"
    ],
    "action": {
        "default_popup": "src/popup/index.html"
    },
    "background": {
        "service_worker": "./background.js"
    },
    "host_permissions": [
        "https://www.youtube.com/*",
        "https://*.youtube.com/*"
    ]
}